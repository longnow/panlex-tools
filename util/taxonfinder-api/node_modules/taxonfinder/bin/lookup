#!/usr/bin/env node

var path = require('path');
var fs = require('fs');

var mainMenu = function() {
  console.log("\nPick a function:");
  console.log("    (t)axonfinder");
  console.log("    (l)ookup name");
  console.log("    (e)xit");
  console.log("\nYour choice: ");
};

var acceptMainMenuResponse = function() {
  process.stdin.resume();
  var menuOption = process.stdin.read();
  if (menuOption) {
    menuOption = menuOption.toString().trim();
    if (menuOption === 't' || menuOption === 'taxonfinder') {
      console.log("Nice name1: " + menuOption);
    } else if (menuOption === 'l' || menuOption === 'lookup' || menuOption === 'lookup name') {
      console.log("Nice name2: " + menuOption);
    } else if (menuOption === 'e' || menuOption === 'exit') {
      process.exit();
    } else {
      console.log("Invalid option: " + menuOption);
    }
    mainMenu();
  }
};

process.stdin.on('readable', acceptMainMenuResponse);

mainMenu();
